{
    "name": "server-template",
    "version": "0.3.0",
    "private": true,
    "description": "Functional template for a backend server, using Fastify and Prisma, and able to handle Kafka",
    "keywords": [
        "server",
        "template",
        "fastify",
        "prisma",
        "kafka"
    ],
    "main": "build/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/abjshawty/server.git"
    },
    "scripts": {
        "build": "tsc",
        "dev": "nodemon src/index.ts",
        "start": "node build/index.js",
        "test": "jest --watchAll",
        "gen": "npx prisma generate",
        "format": "prettier --write ./src",
        "migrate": "npx prisma migrate dev --name dev",
        "reset": "npm i && npx prisma migrate reset --force && npx prisma migrate dev --name dev",
        "create": "npx prisma generate && ts-node src/helpers/generator.ts && prettier --write ./src"
    },
    "dependencies": {
        "@fastify/cors": ">=11.0.1",
        "@fastify/helmet": ">=13.0.1",
        "@fastify/jwt": ">=9.1.0",
        "@fastify/multipart": ">=9.0.3",
        "@fastify/swagger": ">=9.x",
        "@fastify/swagger-ui": ">=5.x",
        "@prisma/client": "6.6.0",
        "death": ">=1.1.0",
        "dotenv": ">=16.5.0",
        "exceljs": ">=4.4.0",
        "fastify": ">=5.3.3",
        "json2csv": ">=6.0.0-alpha.2",
        "kafkajs": ">=2.2.4",
        "pdfkit-table": "^0.1.99",
        "prettier": "^3.5.3",
        "redis": "^5.5.6"
    },
    "devDependencies": {
        "@types/death": ">=1.1.5",
        "@types/jest": ">=29.5.14",
        "@types/node": ">=22.14.0",
        "jest": ">=29.7.0",
        "nodemon": ">=3.1.9",
        "pino-pretty": ">=13.0.0",
        "prettier-plugin-space-before-function-paren": ">=0.0.8",
        "ts-node": ">=10.9.2",
        "typescript": ">=5.8.3"
    },
    "author": "Timmy Kouadio-Bhegnin",
    "license": "MIT",
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./src/test/setup.ts"
        ],
        "coverageDirectory": "coverage",
        "coverageProvider": "v8"
    }
}
